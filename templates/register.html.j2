{% set title = "Register" %}
{% set description = "Create an account to use the key deployment system." %}
{% extends "base.html.j2" %}

{% block content %}
  <p><a href="/">&larr; Back</a></p>

  <form class="form" action="/register" method="POST">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" placeholder="Username" required>

    <label for="password">Password <small>(min. 32 characters)</small></label>
    <input type="password" id="password" name="password" placeholder="Password" minlength="32" required>

    <label for="confirm-password">Confirm Password</label>
    <input type="password" id="confirm-password" name="password_confirm" placeholder="Password" required>

    <input type="submit" value="Register">
  </form>
{% endblock %}
